<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    android:padding="8dp"
    tools:context=".SentimentActivity">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="SENTIMENTAL SCORE"
        android:textColor="@color/background_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Export"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnPickDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="Pick Date"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnWeekly"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="Weekly"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnPickRange"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Pick Range"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_blue_light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateRangeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/etFromDateInline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:hint="From (dd-MM-yyyy)"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:background="@drawable/bg_date_field"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:textSize="13sp"
            android:layout_marginEnd="6dp" />

        <EditText
            android:id="@+id/etToDateInline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:hint="To (dd-MM-yyyy)"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:background="@drawable/bg_date_field"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:textSize="13sp"
            android:layout_marginEnd="6dp" />

        <Button
            android:id="@+id/btnApplyRange"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:text="APPLY"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:backgroundTint="@android:color/holo_blue_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvReportInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:padding="8dp"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:text="Report will be shown here."
        android:textColor="#333333"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/legendRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="12dp"
            android:gravity="center_vertical">
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#ffdd00" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Low"
                android:textSize="14sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="12dp"
            android:gravity="center_vertical">
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#f48c06" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Moderate"
                android:textSize="14sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#d00000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="High"
                android:textSize="14sp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="47dp"
                android:layout_height="363dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:rotation="-90"
                android:text="Score"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="1000dp"
                android:layout_height="500dp"
                android:layout_marginHorizontal="0dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvXAxisLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
