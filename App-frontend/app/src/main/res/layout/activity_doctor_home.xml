<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginBottom="56dp"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imgDoctor"
            android:layout_width="wrap_content"
            android:layout_height="427dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/round_img_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_doctor" />

        <TextView
            android:id="@+id/tvHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="sans-serif-medium"
            android:text="Letâ€™s Consult The Best Doctor For Your Child"
            android:textAlignment="center"
            android:textColor="#23272E"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:fontFamily="sans-serif"
            android:text="Connect with specialized doctors for consultation on child mental health."
            android:textAlignment="center"
            android:textColor="#687187"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/round_button_bg"
            android:backgroundTint="#245BD7"
            android:elevation="2dp"
            android:fontFamily="sans-serif-medium"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/Bottom_menu_bar"
        app:itemIconSize="26dp"
        app:itemIconTint="@color/bottom_nav_icon_selector"
        app:itemTextColor="@color/nav_icon_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</FrameLayout>
