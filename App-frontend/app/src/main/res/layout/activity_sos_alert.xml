<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bottom_menu_bar"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvSosMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Child Alert"
        android:textColor="#0B0000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvQuerySearched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSosMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Query Searched"
        android:textAlignment="center"
        android:textColor="#090000"
        android:textSize="22sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imgSos"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:contentDescription="SOS Alert"
        android:src="@drawable/sos" />

    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgSos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Suicidal content detected"
        android:textColor="#B71C1C"
        android:textSize="22sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/btnDismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#B71C1C"
        android:text="I Understand"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>
