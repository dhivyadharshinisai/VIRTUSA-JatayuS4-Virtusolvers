<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image">

    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="PEAK HOURS"
                android:textColor="@color/background_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnGenerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHeader"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:text="Export"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_green_light" />

            <LinearLayout
                android:id="@+id/buttonRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnGenerate"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPickDate"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:text="Pick Date"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnWeekly"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:text="Weekly"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnPickRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Range"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/holo_blue_light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dateRangeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonRow"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="3">

                <EditText
                    android:id="@+id/etFromDateInline"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:hint="From (dd-MM-yyyy)"
                    android:focusable="false"
                    android:inputType="none"
                    android:background="@drawable/bg_date_field"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:drawablePadding="6dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="13sp"
                    android:layout_marginEnd="6dp" />

                <EditText
                    android:id="@+id/etToDateInline"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:hint="To (dd-MM-yyyy)"
                    android:focusable="false"
                    android:inputType="none"
                    android:background="@drawable/bg_date_field"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:drawablePadding="6dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="13sp"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btnApplyRange"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="APPLY"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:backgroundTint="@android:color/holo_blue_light" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvReportInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateRangeLayout"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Report will be shown here"
                android:textColor="#333333"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvReportInfo"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <!-- Y-axis Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:rotation="-90"
                    android:text="Count"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Scrollable Chart -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/chartContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/barChart"
                            android:layout_width="1200dp"
                            android:layout_height="500dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
